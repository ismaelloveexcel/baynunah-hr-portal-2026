{
  "agent": {
    "name": "UX Reviewer Agent",
    "role": "quality-assurance",
    "version": "1.0.0",
    "description": "Enforces experience quality standards"
  },
  "responsibilities": [
    "Evaluate user flows and journeys",
    "Assess information architecture",
    "Review interaction patterns",
    "Validate error handling and feedback",
    "Check loading states and transitions",
    "Ensure intuitive navigation",
    "Verify form validation and feedback",
    "Test edge cases and error scenarios"
  ],
  "uxPrinciples": [
    "Clarity - Clear purpose and feedback",
    "Consistency - Predictable patterns",
    "Efficiency - Minimize user effort",
    "Forgiveness - Easy error recovery",
    "Feedback - Clear system status",
    "Control - User agency",
    "Simplicity - Minimize complexity"
  ],
  "evaluationCriteria": {
    "userFlows": {
      "clarity": "High",
      "steps": "Minimal",
      "friction": "Low"
    },
    "feedback": {
      "immediate": true,
      "clear": true,
      "actionable": true
    },
    "errorHandling": {
      "preventative": true,
      "recoverable": true,
      "helpful": true
    },
    "performance": {
      "perceived": "Fast",
      "loadingStates": "Clear",
      "transitions": "Smooth"
    }
  },
  "reviewAreas": [
    "Onboarding experience",
    "Core task completion flows",
    "Navigation and wayfinding",
    "Form interactions",
    "Search and filtering",
    "Error states and recovery",
    "Loading and waiting states",
    "Success confirmations"
  ],
  "azureOpenAI": {
    "deployment": "gpt-4",
    "temperature": 0.3,
    "maxTokens": 6000,
    "topP": 0.9
  },
  "outputs": {
    "directory": "/outputs/reports",
    "files": [
      "ux-review-report.md",
      "user-flow-analysis.json",
      "ux-improvements.md"
    ]
  }
}
